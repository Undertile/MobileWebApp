<?xml version='1.0' encoding='utf-8'?>
<widget id="com.undertile.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Undertile</name>
    <description>
        Undertile.
    </description>
    <author email="undertile@undertile.com" href="http://www.undertile.com">
        Undertile
    </author>
    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    
    <icon src="res/icon/cordova_512.png" />
    <icon gap:density="ldpi" gap:platform="android" src="res/icon/cordova_android_36.png" />
    <icon gap:density="mdpi" gap:platform="android" src="res/icon/cordova_android_48.png" />
    <icon gap:density="hdpi" gap:platform="android" src="res/icon/cordova_android_72.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="res/icon/cordova_android_96.png" />
    <icon gap:platform="blackberry" src="res/icon/cordova_bb_80.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="res/icon/cordova_bb_80.png" />
    <icon gap:platform="ios" height="57" src="res/icon/cordova_ios_57.png" width="57" />
    <icon gap:platform="ios" height="72" src="res/icon/cordova_ios_72.png" width="72" />
    <icon gap:platform="ios" height="114" src="res/icon/cordova_ios_114.png" width="114" />
    <icon gap:platform="ios" height="144" src="res/icon/cordova_ios_144.png" width="144" />
    <icon gap:platform="webos" src="res/icon/cordova_64.png" />
    <icon gap:platform="winphone" src="res/icon/cordova_48.png" />
    <icon gap:platform="winphone" gap:role="background" src="res/icon/cordova_256.png" />
    
    <access origin="*" />
</widget>
